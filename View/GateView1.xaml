    <UserControl.Resources>
        <Style TargetType="Path">
            <Setter Property="Stroke" Value="#FFCDC09E"/>
            <Setter Property="Fill" Value="#FFEBDFBF"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding Path=DataContext.IsOnOf}" Value="False">
                    <Setter Property="Stroke" Value="Black"/>
                    <Setter Property="Fill" Value="Red"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    
    <Grid Width="30" Height="40" HorizontalAlignment="Center" Margin="3,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Path HorizontalAlignment="Left" Stroke="#FFCDC09E" StrokeThickness="1" Fill="#FFEBDFBF"
              Data="M 0 0 L 5 10  L 25 10 L 30 0z"/>
        <Border Grid.Row="1" BorderBrush="#FFCDC09E" Height="8" Width="21"  BorderThickness="1,0,1,0" Background="#FFEBDFBF"/>
        <Path Grid.Row="2" HorizontalAlignment="Left" Stroke="#FFCDC09E" StrokeThickness="1" Fill="#FFEBDFBF"
              Data="M 5 0 L 0 10 L 30 10 L 25 0z"/>
        <Border Grid.Row="2" Margin="-5,2,5,0" Width="25" BorderBrush="Black" Background="#FFEBDFBF" BorderThickness="1" CornerRadius="2" Panel.ZIndex="1">
            <TextBlock FontSize="8" HorizontalAlignment="Center" Text="{Binding GateName}"/>
        </Border> 
    </Grid>

</UserControl>
